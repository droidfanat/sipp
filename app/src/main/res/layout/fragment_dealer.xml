<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#36363f">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/regphone"
                android:textSize="30dp"
                android:paddingLeft="8dp"
                android:textColor="#c2c2c2"
                android:gravity="center|center_vertical|center_horizontal"
                android:paddingRight="40dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:clickable="false"
                android:hint="     NUMBER" />

            <Button
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:text="c"
                android:id="@+id/btnClear"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/regphone"
                android:layout_alignEnd="@+id/regphone"
                android:background="@drawable/selector_button_dialer"
                android:textColor="#c2c2c2"
                android:textSize="20dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="#c2c2c2" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:layout_margin="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:id="@+id/btn1"
                    android:textSize="25dp"
                    android:textColor="#c2c2c2"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:drawableBottom= "@drawable/empty"
                    android:background="@drawable/selector_button_dialer"
                    android:paddingBottom="7dp"
                    android:paddingTop="6dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:id="@+id/btn2"
                    android:textSize="25dp"
                    android:textColor="#c2c2c2"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:drawableBottom= "@drawable/abc"
                    android:background="@drawable/selector_button_dialer"
                    android:paddingTop="6dp"
                    android:paddingBottom="7dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:id="@+id/btn3"
                    android:textSize="25dp"
                    android:textColor="#c2c2c2"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:drawableBottom= "@drawable/def"
                    android:background="@drawable/selector_button_dialer"
                    android:paddingTop="6dp"
                    android:paddingBottom="7dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:id="@+id/btn4"
                    android:textSize="25dp"
                    android:textColor="#c2c2c2"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:drawableBottom= "@drawable/ghi"
                    android:background="@drawable/selector_button_dialer"
                    android:paddingTop="6dp"
                    android:paddingBottom="7dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:id="@+id/btn5"
                    android:textSize="25dp"
                    android:textColor="#c2c2c2"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:drawableBottom= "@drawable/jkl"
                    android:background="@drawable/selector_button_dialer"
                    android:paddingTop="6dp"
                    android:paddingBottom="7dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:id="@+id/btn6"
                    android:textSize="25dp"
                    android:textColor="#c2c2c2"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:drawableBottom= "@drawable/mno"
                    android:background="@drawable/selector_button_dialer"
                    android:paddingTop="6dp"
                    android:paddingBottom="7dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:id="@+id/btn7"
                    android:textSize="25dp"
                    android:textColor="#c2c2c2"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:drawableBottom= "@drawable/pqrs"
                    android:background="@drawable/selector_button_dialer"
                    android:paddingTop="6dp"
                    android:paddingBottom="7dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:id="@+id/btn8"
                    android:textSize="25dp"
                    android:textColor="#c2c2c2"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:drawableBottom= "@drawable/tuv"
                    android:background="@drawable/selector_button_dialer"
                    android:paddingTop="6dp"
                    android:paddingBottom="7dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:id="@+id/btn9"
                    android:textSize="25dp"
                    android:textColor="#c2c2c2"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:drawableBottom= "@drawable/wxyz"
                    android:background="@drawable/selector_button_dialer"
                    android:paddingTop="6dp"
                    android:paddingBottom="7dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="*"
                    android:id="@+id/btnStar"
                    android:textSize="25dp"
                    android:textColor="#c2c2c2"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_button_dialer" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:id="@+id/btn0"
                    android:textSize="25dp"
                    android:textColor="#c2c2c2"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:drawableBottom= "@drawable/plus"
                    android:background="@drawable/selector_button_dialer"
                    android:paddingTop="6dp"
                    android:paddingBottom="7dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="#"
                    android:id="@+id/btnReshotka"
                    android:textSize="25dp"
                    android:textColor="#c2c2c2"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_button_dialer" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Call"
                android:id="@+id/call_button"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:textColor="#fff"
                android:textSize="18dp"
                android:background="@drawable/selector_button_call"
                android:layout_marginRight="2.5dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="CallBack"
                android:id="@+id/callback_button"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:textColor="#fff"
                android:textSize="18dp"
                android:background="@drawable/selector_button_call"
                android:layout_marginLeft="2.5dp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>